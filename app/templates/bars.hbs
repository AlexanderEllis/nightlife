<div class="jumbo">
  <h2>Welcome!</h2>
  <p>We hope you find exactly what you're looking for in a bar to visit.</p>
  {{#link-to 'about' class="button"}}
    About Us
  {{/link-to}}
</div>

{{#bar-name-filter filter=(action 'filterByName') as |bars|}}
  <ul class="results">
    {{#each bars as |barUnit|}}
      <li>{{bar-listing bar=barUnit}}</li>
    {{/each}}
  </ul>
{{/bar-name-filter}}
